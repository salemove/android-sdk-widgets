<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Application.Glia.Header.EndButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/gliaSystemNegativeColor</item>
        <item name="android:strokeColor">?attr/gliaSystemNegativeColor</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textColor">?attr/gliaBaseLightColor</item>
    </style>

    <style name="Application.Glia.Chat.Edittext" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Application.Glia.Chat.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.Dialog
        </item>
    </style>

    <style name="Application.Glia.Chat.ShapeAppearance.Dialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/glia_x_large</item>
    </style>

    <style name="Application.Glia.Chat.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/glia_small</item>
    </style>

    <style name="Application.Glia.Chat.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.SmallComponent
        </item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textColor">?attr/gliaBaseLightColor</item>
    </style>

    <style name="Application.Glia.Chat.Button.Positive" parent="Application.Glia.Chat.Button">
        <item name="android:backgroundTint">?attr/gliaBrandPrimaryColor</item>
    </style>

    <style name="Application.Glia.Chat.Button.Negative" parent="Application.Glia.Chat.Button">
        <item name="android:backgroundTint">?attr/gliaSystemNegativeColor</item>
    </style>

    <style name="Application.Glia.Chat.Button.Neutral" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.SmallComponent
        </item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
        <item name="android:backgroundTint">?attr/gliaSystemAgentBubbleColor</item>
    </style>

    <style name="Application.Glia.Chat.Button.SurveyOption" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.SmallComponent
        </item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:minWidth">@dimen/glia_survey_option_button_width</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Application.Glia.Chat.ChatHead">
        <item name="badgeBackgroundTintList">?attr/gliaBrandPrimaryColor</item>
        <item name="badgeTextColor">?attr/baseLightColor</item>
        <item name="backgroundTintList">?attr/baseLightColor</item>
        <item name="operatorPlaceholderIcon">?attr/gliaIconPlaceholder</item>
        <item name="operatorPlaceholderBackgroundColor">?attr/gliaBrandPrimaryColor</item>
        <item name="operatorPlaceholderIconTintList">?attr/baseLightColor</item>
    </style>

    <style name="Application.Glia.Chat.GvaChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/Application.Glia.Chat.GvaChipShapeAppearance</item>
        <item name="android:textColor">?attr/gvaQuickReplyTextColor</item>
        <item name="chipStrokeColor">?attr/gvaQuickReplyStrokeColor</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="android:checkable">false</item>
        <item name="chipBackgroundColor">?attr/gvaQuickReplyBackgroundColor</item>
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Application.Glia.Chat.GvaChipShapeAppearance" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Application.Glia.VisitorCode" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
        <item name="android:background">@drawable/bg_char_slot</item>
    </style>

    <style name="Application.Glia.Header1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Header2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Header3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
        <!--        font weight available from api 28 :(-->
    </style>

    <style name="Application.Glia.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/gliaBaseNormalColor</item>
    </style>

    <style name="Application.Glia.Header2.Dialog" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Application.Glia.ChoiceCard.ContentText" parent="Application.Glia.Body">
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
