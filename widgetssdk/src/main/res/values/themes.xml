        <item name="textAppearanceHeadline1">@style/Application.Glia.Header1</item>
        <item name="textAppearanceHeadline2">@style/Application.Glia.Header2</item>
        <item name="textAppearanceHeadline3">@style/Application.Glia.Header3</item>
        <item name="textAppearanceCaption">@style/Application.Glia.Caption</item>
        <item name="textAppearanceBody1">@style/Application.Glia.Body</item>
        <item name="textAppearanceSubtitle2">@style/Application.Glia.Subtitle2</item>
