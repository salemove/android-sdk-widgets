<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/type_indicator_view"
        android:layout_width="@dimen/chat_attachment_type_indicator_size"
        android:layout_height="@dimen/chat_attachment_type_indicator_size"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginBottom="@dimen/large"
        app:cardBackgroundColor="@color/glia_brand_primary_color"
        app:cardCornerRadius="@dimen/chat_attachment_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/type_indicator_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <TextView
            android:id="@+id/type_indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/glia_base_light_color"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="PDF" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/remove_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:padding="9dp"
        android:src="@drawable/ic_baseline_close"
        android:tint="@color/glia_base_normal_color"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/glia_base_normal_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/remove_item_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/type_indicator_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Document.pdf • 751 kb" />

    <TextView
        android:id="@+id/status_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/transparent_black_bg"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/remove_item_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/type_indicator_view"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        tools:text="Uploading file…" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/chat_attachment_progressbar_height"
        android:layout_marginStart="12dp"
        android:indeterminate="true"
        android:max="100"
        app:indicatorColor="@color/glia_brand_primary_color"
        app:layout_constraintBottom_toBottomOf="@id/type_indicator_view"
        app:layout_constraintEnd_toStartOf="@id/remove_item_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/type_indicator_view"
        app:layout_constraintTop_toBottomOf="@id/status_indicator"
        app:layout_constraintWidth_percent="0.5"
        app:trackColor="@color/glia_system_agent_bubble_color"
        app:trackCornerRadius="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>