<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Application.Glia.Chat.Edittext" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Application.Glia.Chat.Toolbar" parent="">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">?attr/gliaBaseLightColor</item>
    </style>

    <style name="Application.Glia.Chat.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.MediumComponent
        </item>
    </style>

    <style name="Application.Glia.Chat.ShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium</item>
    </style>

    <style name="Application.Glia.Chat.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small</item>
    </style>

    <style name="Application.Glia.Chat.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Application.Glia.Chat.ShapeAppearance.SmallComponent
        </item>
    </style>

    <style name="Application.Glia.Chat.Button.Negative" parent="Application.Glia.Chat.Button">
        <item name="backgroundTint">?attr/gliaSystemNegativeColor</item>
    </style>

    <style name="Application.Glia.Chat.Button.Extended" parent="Application.Glia.Chat.Button">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Application.Glia.Chat.Button.Extended.Negative" parent="Application.Glia.Chat.Button.Extended">
        <item name="backgroundTint">?attr/gliaSystemNegativeColor</item>
    </style>

    <style name="Application.Glia.Header1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Header2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Header3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
<!--        font weight available from api 28 :(-->
    </style>

    <style name="Application.Glia.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

    <style name="Application.Glia.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Application.Glia.Header2.Dialog" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Application.Glia.Body.Dialog" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/gliaBaseDarkColor</item>
    </style>

</resources>
