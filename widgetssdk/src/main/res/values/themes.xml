    <style name="ThemeOverlay.Glia.Chat.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Application.Glia.Header2.Dialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Application.Glia.Body.Dialog</item>
        <item name="backgroundTint">?attr/gliaBaseLightColor</item>

        <item name="buttonBarPositiveButtonStyle">@style/Application.Glia.Chat.Button.Extended
        </item>
        <item name="buttonBarNeutralButtonStyle">
            @style/Application.Glia.Chat.Button.Extended.Negative
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/Application.Glia.Chat.Button</item>
    </style>

