<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_sdk_title">

        <EditTextPreference
            app:defaultValue="@string/app_token"
            app:key="@string/pref_app_token"
            app:title="@string/settings_app_token"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/site_id"
            app:key="@string/pref_site_id"
            app:title="@string/settings_site_id"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/settings_value_default_company_name"
            app:key="@string/pref_company_name"
            app:title="@string/settings_company_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="https://en.wikipedia.org/wiki/Hamburger"
            app:key="@string/pref_context_url"
            app:title="@string/settings_context_url"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="@string/queue_id"
            app:key="@string/pref_queue_id"
            app:title="@string/settings_queue_id"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="@string/pref_white_label"
            app:title="@string/settings_white_label" />

        <SwitchPreference
            app:defaultValue="true"
            app:key="@string/pref_use_overlay"
            app:title="@string/settings_use_overlay" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="@string/pref_use_alert_dialog_button_vertical_alignment"
            app:title="@string/settings_use_alert_dialog_button_vertical_alignment" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_colors_title">

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_brand_primary_color"
            android:title="@string/settings_chat_brand_primary_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_base_dark_color"
            android:title="@string/settings_chat_base_dark_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_base_light_color"
            android:title="@string/settings_chat_base_light_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_base_normal_color"
            android:title="@string/settings_chat_base_normal_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_base_shade_color"
            android:title="@string/settings_chat_base_shade_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_system_agent_bubble_color"
            android:title="@string/settings_chat_system_agent_bubble_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_system_negative_color"
            android:title="@string/settings_chat_negative_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_visitor_message_bg_color"
            android:title="@string/settings_chat_visitor_message_bg_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_visitor_message_txt_color"
            android:title="@string/settings_chat_visitor_message_txt_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_operator_message_bg_color"
            android:title="@string/settings_chat_operator_message_bg_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_operator_message_txt_color"
            android:title="@string/settings_chat_operator_message_txt_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_bot_action_button_bg_color"
            android:title="@string/settings_chat_bot_action_button_bg_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_bot_action_button_txt_color"
            android:title="@string/settings_chat_bot_action_button_txt_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_bot_action_button_selected_bg_color"
            android:title="@string/settings_chat_bot_action_button_selected_bg_color"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/colors"
            android:entryValues="@array/color_values"
            android:key="@string/pref_bot_action_button_selected_txt_color"
            android:title="@string/settings_chat_bot_action_button_selected_txt_color"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_typography">

        <ListPreference
            android:defaultValue="@string/default_value"
            android:entries="@array/fonts"
            android:entryValues="@array/font_values"
            android:key="@string/pref_font_family"
            android:title="@string/settings_chat_font_family"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_other">

        <EditTextPreference
            app:key="@string/pref_header_title"
            app:title="@string/settings_header_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
