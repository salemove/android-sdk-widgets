<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/glia_x_large"
    android:paddingHorizontal="@dimen/glia_x_large"
    android:paddingBottom="@dimen/glia_large_x_large">

    <TextView
        android:id="@+id/dialog_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline2"
        tools:text="Title"
        tools:textAppearance="@style/TextAppearance.MaterialComponents.Headline2" />

    <TextView
        android:id="@+id/dialog_message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/glia_large"
        android:layout_marginBottom="@dimen/glia_medium"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        tools:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <ImageButton
        android:id="@+id/close_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/glia_medium"
        android:background="?attr/selectableItemBackground"
        android:src="?attr/gliaIconLeaveQueue"
        app:tint="?attr/gliaBaseNormalColor"
        tools:src="@android:drawable/ic_menu_close_clear_cancel" />

</androidx.appcompat.widget.LinearLayoutCompat>
