    <style name="Theme.GliaAndroidSdkWidgets.Chat" parent="Application.Glia.Chat">
        <item name="materialThemeOverlay">@style/ThemeOVerlay.GliaAndroidSDKWidgets.Chat</item>
    </style>

    <style name="ThemeOVerlay.GliaAndroidSDKWidgets.Chat" parent="ThemeOverlay.Glia.Chat">
        <item name="gliaBaseLightColor">@color/color_red</item>
        <item name="gliaBaseDarkColor">@color/color_blue</item>
